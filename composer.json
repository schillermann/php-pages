{
    "name": "schillermann/phppages",
    "description": "Pages Framework Object Oriented With PHP",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "PhpPages\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": { "PhpPages\\Tests\\": "tests/" }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.8",
        "friendsofphp/php-cs-fixer": "^3.64"
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse --level 9 src tests",
        "test": "vendor/bin/phpunit tests"
    }
}
